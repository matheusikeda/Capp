<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cmovel.ufop.br.capp.EditCarActivity"
    android:orientation="vertical"
    android:background="#515151"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <TextView
            android:id="@+id/model"
            android:layout_marginTop="80dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"
            android:text="Model" />

        <EditText
            android:id="@+id/editCarModel"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/licensePlate"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content"
            android:text="License Plate" />

        <EditText
            android:id="@+id/editLicensePlate"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/make"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content"
            android:text="Make" />

        <EditText
            android:id="@+id/editMake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:text="Year" />

        <EditText
            android:id="@+id/editYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"
            android:textColor="#ffffff"
            android:ems="10"
            android:inputType="numberSigned"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/engine"
                android:layout_width="116dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:textSize="18sp"
                android:layout_marginLeft="30dp"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"
                android:text="Engine" />
            <Spinner
                android:id="@+id/eSpinner"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </Spinner>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/transmission"
                android:layout_width="116dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:textSize="18sp"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"
                android:text="Transmission" />
            <Spinner
                android:id="@+id/tSpinner"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </Spinner>

        </LinearLayout>


        <Button
            android:id="@+id/editCar"
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:onClick="editCar"
            android:background="@drawable/background_button"
            android:text="Save" />

        <Button
            android:id="@+id/deleteCar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_marginBottom="50dp"
            android:onClick="deleteCar"
            android:background="@drawable/background_button"
            android:text="Delete" />
    </LinearLayout>

</ScrollView>
